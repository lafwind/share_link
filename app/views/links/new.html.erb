<div class="page_title">
  New Link
</div>

<div class = "page_content">
  <div class="form">
    <%= form_for([@user, @user.links.build]) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Page title" %>
      <%= f.label :description %>
      <%= f.text_area :description, placeholder: "Add some description about the site" %>
      <%= f.label :url %>
      <%= f.text_field :url, placeholder: "\" http(s):// \" is not need !"%>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <%= f.submit "Create", class: "new-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
