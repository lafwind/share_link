<p><%= link_to @link.title, "http://#{@link.url}" %></p>

<p>Comment: </p>
<% @comments.each do |user_name, content| %>
  <p><%= user_name %>: <%= content %></p>
<% end %>

<% if logged_in? %>
  <%= form_for([@user, @link, @link.comments.build]) do |f| %>
    <%= f.label :comment %>
    <%= f.text_area :content %>
    <%= f.submit "submit" %>
  <% end %>
<% else %>
  <p>
    Please <%= link_to 'log in', login_path %> to comment, don't have an account? <%= link_to 'signup', signup_path %>!
  </p>
<% end %>
