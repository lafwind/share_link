
<div class="page_title">
  <%= link_to @link.title, "http://#{@link.url}" %>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">


    <% if logged_in? %>
      <p>
        <%= link_to  like_user_link_path(@user, @link), method: :put do %>
          Like
          <%= @link.get_upvotes.size %>
        <% end %>
        <%= link_to  dislike_user_link_path(@user, @link), method: :put do %>
          Dislike
          <%= @link.get_downvotes.size %>
        <% end %>
      </p>

      <%= form_for([@user, @link, @link.comments.build]) do |f| %>
        <%= f.label :comment %>
        <%= f.text_area :content %>
        <div class="row">
          <div class="col-md-3 col-md-offset-9">
            <%= f.submit "submit", class: "new-btn" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>
        Like <%= @link.get_upvotes.size %>
        DisLike <%= @link.get_downvotes.size %>
      </p>
      <p>
        Please <%= link_to 'log in', login_path %> to comment, don't have an account? <%= link_to 'signup', signup_path %>!
      </p>
    <% end %>



    <p>Comment: </p>
    <% @comments.each do |comment| %>
      <p><%= link_to comment[0].name, user_path(comment[0]) %>: <%= comment[1] %></p>
    <% end %>
  </div>
</div>
